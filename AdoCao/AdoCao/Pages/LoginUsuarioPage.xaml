<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AdoCao.Pages.LoginUsuarioPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand"
                     Margin="16"
                     Padding="16">
            <Label x:Name="lblTitulo" 
                   Text="AdoCão" 
                   FontSize="Title" 
                   HorizontalOptions="Center"/>
            <Label x:Name="lblEmail" Text="E-mail" />
            <Entry x:Name="txtEmail" Placeholder="seu@email.com.br"/>
            <Label x:Name="lblSenha" Text="Senha"/>
            <Entry x:Name="txtSenha" Placeholder="********" IsPassword="True" />
            <Button x:Name="btnEntrar" Text="Entrar" Clicked="btnEntrar_Clicked" />
            <Button x:Name="btnRegistrar" 
                    Text="Registre-se" 
                    Clicked="btnRegistrar_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>