<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AdoCao.Pages.LoginUsuarioPage" Scale="1.5">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand"
                     Margin="16"
                     Padding="16" WidthRequest="60">
            <Label x:Name="lblTitulo" 
                   Text="AdoCão" 
                   FontSize="Title" 
                   HorizontalOptions="Center" Margin="0,0,0,20"/>
            <StackLayout Orientation="Vertical"
                         HorizontalOptions="CenterAndExpand" WidthRequest="200">
                <Label x:Name="lblEmail" Text="E-mail" />
                <Entry x:Name="txtEmail" Placeholder="seu@email.com.br"/>
                <Label x:Name="lblSenha" Text="Senha"/>
                <Entry x:Name="txtSenha" Placeholder="********" IsPassword="True" />
                
                <StackLayout Margin="0,20,0,0">
                    <Button x:Name="btnEntrar" Text="Entrar" Clicked="btnEntrar_Clicked" />
                    <Button x:Name="btnRegistrar" 
                    Text="Registre-se" 
                    Clicked="btnRegistrar_Clicked"/>
                </StackLayout>
               
            </StackLayout>
            
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>