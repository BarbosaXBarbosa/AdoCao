<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AdoCao.Pages.EditaUsuarioPage">
    <ContentPage.Content>
        <StackLayout>

            <Label x:Name="lblTitutlo" Text="Cadastra-se" FontSize="Title"/>
            <Entry x:Name="txtNome" Placeholder="Nome completo"/>
            <Entry x:Name="txtEmail" Placeholder="seu@email.com.br"/>
            <Entry x:Name="txtSenha" Placeholder="**********" IsPassword="True"/>
            <Entry x:Name="txtConfirmacaoSenha" Placeholder="Confirme sua senha" IsPassword="True"/>
            <Button x:Name="btnRegistrar"
                    Text="Registrar"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>